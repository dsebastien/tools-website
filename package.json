{
    "name": "tools-website",
    "private": true,
    "version": "0.0.1",
    "description": "Tools showcase website for dSebastien",
    "author": "SÃ©bastien Dubois",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dsebastien/tools-website.git"
    },
    "bugs": {
        "url": "https://github.com/dsebastien/tools-website/issues"
    },
    "homepage": "https://tools.dsebastien.net",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build && tsx scripts/generate-static-pages.ts && tsx scripts/generate-sitemap.ts && tsx scripts/generate-llms-txt.ts",
        "preview": "vite preview",
        "prepare": "husky",
        "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
        "format": "prettier --write .",
        "tsc": "tsc --noEmit",
        "tsc:watch": "tsc --noEmit --watch --preserveWatchOutput",
        "tscw": "npm run tsc:watch",
        "commit": "cz",
        "cm": "npm run commit",
        "commit:lint": "commitlint --from HEAD~1 --to HEAD --verbose",
        "release": "read -p 'Enter tag name: ' TAG && git tag \"$TAG\" && git push origin \"$TAG\" && echo \"Tag $TAG created and pushed. Deployment will start automatically.\"",
        "release:changelog": "tsx scripts/generate-changelog.ts",
	"push": "git push && git push --tags"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-customizable"
        },
        "cz-customizable": {
            "config": ".cz-config.cjs"
        }
    },
    "engines": {
        "node": ">=20.0",
        "npm": ">=10.1.0"
    },
    "dependencies": {
        "clsx": "^2.1.1",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "react-icons": "5.5.0",
        "react-markdown": "^10.1.0",
        "react-router": "7.9.6",
        "tailwind-merge": "3.4.0"
    },
    "devDependencies": {
        "@commitlint/cli": "20.1.0",
        "@commitlint/config-conventional": "20.0.0",
        "@eslint/js": "^9.36.0",
        "@tailwindcss/vite": "4.1.17",
        "@types/node": "24.10.1",
        "@types/react": "19.2.7",
        "@types/react-dom": "19.2.3",
        "@vitejs/plugin-react": "5.1.1",
        "commitizen": "4.3.1",
        "conventional-changelog-cli": "5.0.0",
        "conventional-changelog-conventionalcommits": "9.1.0",
        "cz-customizable": "7.5.1",
        "eslint": "^9.36.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-react": "^7.37.5",
        "globals": "^16.4.0",
        "husky": "^9.1.7",
        "lint-staged": "16.2.7",
        "prettier": "3.6.2",
        "prettier-plugin-tailwindcss": "^0.7.1",
        "tailwindcss": "4.1.17",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "8.48.0",
        "vite": "7.2.4"
    }
}
